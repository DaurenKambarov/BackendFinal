<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>
    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
    
    </form>
</div>
<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <label for="name"><b1>Name</b1></label>
    <input type="text" placeholder="Post Title" name="name" value="<%= data.name %>">

    <label for="information"><b1>Content</b1></label>
    <textarea name="information" cols="30" rows="10"><%= data.information %></textarea>

    <label for="images"><b1>Images (Minimum 3)</b1></label>
    <input type="file" name="images" accept="image/*" multiple>

    <input type="submit" value="Update" class="btn">
</form>